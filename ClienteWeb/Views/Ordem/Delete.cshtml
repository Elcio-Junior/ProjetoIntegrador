@model Modelo.Ordem

@{
    ViewBag.Title = "Ordem de Serviço";
    ViewBag.Subtitle = "Excluir";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Abertura)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Abertura)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fechamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fechamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Equipamento.Modelo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Equipamento.Modelo)
        </dd>

    </dl>

    <h3>Itens</h3>

    <table class="table">
        <tr>
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Valor
            </th>
            <th>
                Total
            </th>
        </tr>

        @foreach (var item in Model.Itens)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicoP.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicoP.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
            </tr>
        }

    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
