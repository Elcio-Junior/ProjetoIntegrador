@model IEnumerable<Modelo.Ordem>

@{
    ViewBag.Title = "Ordem de Serviços";
}

<p>
    @Html.ActionLink("Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Equipamento.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abertura)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Fechamento)
        </th>*@
       
        <th>
            Imprimir
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipamento.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abertura)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Fechamento)
            </td>*@
            
            <td>
                @Html.ActionLink("Imprimir", "ImprimirOS", "OrdemReport", new { OrdemId = item.Id }, new { target = "_blank" })
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
